{
  "name": "Refgen",
  "version": "1.3.0",
  "manifest_version": 3,
  "description": "Generate referrer for current page.",
  "author": "Reorx <novoreorx@gmail.com>",
  "icons": {
    "16": "logo-947.png",
    "48": "logo-947.png",
    "128": "logo-947.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      }
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ]
}
